layout {
    default_tab_template {
        children
        pane size=1 borderless=true {
            plugin location="zellij:compact-bar"
        }
    } 

    tab name="terminal" split_direction="vertical" {
        pane borderless=true command="nvim"{
            args "."
        }
        pane size="30%" split_direction="horizontal" {
            pane
        }
    }
}
