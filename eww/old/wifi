#!/bin/bash

get_status() {
    echo $(nmcli | grep wl | awk 'FNR==1' | awk '{print $2}')
}

get_name() {
    echo $(nmcli | grep wl | awk 'FNR==1' | cut -f 4- -d ' ')
}

get_strength() {
    echo $(awk 'NR==3 {printf("%.0f",$3*10/7)}' /proc/net/wireless)
}

get_icon() {
    status=$(get_status)
    strength=$(get_strength)
    if [[ $status == conectado ]]; then
        if (( $strength > 75 )); then
            echo 󰤨
        elif (( $strength > 50 )); then
            echo 󰤥
        elif (( $strength > 25 )); then
            echo 󰤢
        else
            echo 󰤟
        fi
    elif [[ $status == conectando ]]; then
        echo 󱛇
    else
        echo 󰤮
    fi
}

case $1 in
    "--status") get_status ;;
    "--name") get_name ;;
    "--icon") get_icon ;;
    "--strength") get_strength ;;
    *) get_status ;;
esac
