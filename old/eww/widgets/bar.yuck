(defwidget clock []
    (eventbox
        :class "clock"

        (box :class "date" :space-evenly false :spacing 10
            (box :class "clock" :space-evenly false :spacing 3
                (label :class "clock hour" :text {formattime(EWW_TIME, "%H", "Europe/Madrid")})
                (label :class "clock ellipsis" :text ":")
                (label :class "clock minute" :text {formattime(EWW_TIME, "%M", "Europe/Madrid")}))

            (label :class "period" :text "Â·")
            (label :class "today" :text {formattime(EWW_TIME, "%d %b", "Europe/Madrid")}))))


(defwidget island []
    (box
        :class "island"
        :space-evenly false
        :spacing 10

        (eventbox
            :class "island_center"
            :cursor "pointer"

            (box
                :class "workspaces"

                (box
                    :space-evenly false
                    :spacing 10
                    :halign "center"

                    (for workspace in {workspaces}
                        (eventbox
                            :cursor "pointer"
                            :halign "center"
                            (button
                                :class "workspace ${workspace.focused ? 'active' : workspace.empty ? 'empty' : 'inactive'}"))))))))
        ;; change this to something like the dynamic island
        ;; for example, grow with music, grow notifications from there, live activities...

(defwidget volume-icon []
    (box
        :class "volume-icon"
        :tooltip {volume.volume}
        {volume.icon}))

(defwidget network []
    (box
        :class "network"
        :tooltip "${network.name} (${network.strength})"
        {network.icon}))

(defwidget battery []
    (box
        :class "battery"
        :tooltip {battery.percent}
        {battery.icon}))

